<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/shadow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:background="@color/view_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/black"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@+id/shadow"
        app:layout_constraintRight_toLeftOf="@+id/pink"
        app:layout_constraintLeft_toRightOf="@+id/shadow"
        app:layout_constraintBottom_toBottomOf="@+id/shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/pink"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@+id/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/black"
        app:layout_constraintBottom_toBottomOf="@+id/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>